<svg width="180" height="180" viewBox="0 0 180 180" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="appleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffb400;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#ff8c00;stop-opacity:1"/>
    </linearGradient>
    <filter id="appleShadow">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.25"/>
    </filter>
  </defs>
  
  <!-- Background rond avec dégradé -->
  <rect width="180" height="180" rx="40" fill="url(#appleGradient)"/>
  
  <!-- Lettre R stylisée -->
  <text x="90" y="130" font-family="Archivo Black, Arial, sans-serif" font-size="110" font-weight="900" fill="#ffffff" text-anchor="middle" filter="url(#appleShadow)">
    R
  </text>
  
  <!-- Point décoratif -->
  <circle cx="135" cy="45" r="12" fill="#ffffff" opacity="0.9"/>
</svg>
